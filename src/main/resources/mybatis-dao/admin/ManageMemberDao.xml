<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meandbooksteam2.shoppingmall.dao.admin.ManageMemberDao">
    <!--회원 목록을 가져오는 쿼리-->
    <select id="listMember" parameterType="hashmap" resultType="com.meandbooksteam2.shoppingmall.dto.MemberDto">
        SELECT MEM_NO
             , MEM_UID
             , MEM_NM
             , MEM_PHONENO
             , MEM_ADDR1
             , MEM_ADDR2
             , MEM_ADDR3
             , MEM_EMAIL
             , `ACCESSIBLE`
        FROM MEMBER
    </select>
    <!--회원 밴을 염두에 둔 쿼리-->
    <update id="updateMember" parameterType="hashmap">
        UPDATE MEMBER SET `ACCESSIBLE` = #{accessible} WHERE MEM_NO=#{member_no}
    </update>
    <!--회원번호를 바인딩 변수로 넣어 한 회원의 정보를 가져오는 쿼리-->
    <select id="viewMember" parameterType="hashmap" resultType="com.meandbooksteam2.shoppingmall.dto.MemberDto">
        SELECT MEM_NO
             , MEM_UID
             , MEM_PHONENO
             , MEM_NM
             , MEM_EMAIL
             , MEM_ADDR1
             , MEM_ADDR2
             , MEM_ADDR3
             , MEM_MILEAGE
             , `ACCESSIBLE`
        FROM MEMBER
        WHERE MEM_NO = #{mem_no}
    </select>
    <!--keyword를 바인딩변수로 받아 회원테이블에서 검색하는 쿼리-->
    <select id="searchMember" parameterType="hashmap" resultType="com.meandbooksteam2.shoppingmall.dto.MemberDto">
        SELECT MEM_NO
             , MEM_UID
             , MEM_NM
             , MEM_EMAIL
             , `ACCESSIBLE`
        FROM MEMBER
        WHERE MEM_UID LIKE CONCAT('%', #{keyword}, '%')
        OR MEM_NM LIKE CONCAT('%', #{keyword}, '%')
    </select>
</mapper>
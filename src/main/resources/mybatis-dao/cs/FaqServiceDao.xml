<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meandbooksteam2.shoppingmall.dao.cs.FaqServiceDao">

    <!--FAQ 작성-->
    <insert id="insertFaq" parameterType="hashmap">
        insert into faq
            (faq_cate
            ,faq_title
            ,faq_content)
        values
            (#{faq_cate}
            ,#{faq_title}
            ,#{faq_content})
    </insert>

    <!--삭제-->
    <delete id="deleteFaq" parameterType="hashmap">
        delete from faq where faq_no = #{faq_no}
    </delete>

    <!--수정 - 카테고리 말고 제목이랑 내용만 수정하도록 했음-->
    <update id="updateFaqStatus" parameterType="hasmap">
        update faq set faq_title = #{faq_title}
                     , faq_content = #{faq_content}
        where faq_no = #{faq_no}
    </update>

    <!--목록 조회 - 정렬은 안시켰음-->
    <select id="listFaq" parameterType="hashmap" resultType="FaqDto">
        select faq_cate
              ,faq_title
              ,faq_content
        from faq
    </select>
</mapper>